PROJECT = cliente
CFLAGS = -Wall
LDFLAGS = -lm -lpthread
CC = g++
EXCLUDED_FILES = servidor.cpp Respuesta.cpp
OBJECTS = $(patsubst %.cpp, %.o, $(filter-out $(EXCLUDED_FILES),$(wildcard *.cpp)))

ID_RED = 192.168.0.0
HOST_FIRST = 8
HOST_LAST = 8
SERVER_PORT = 5000
TIEMPO = 5
ARGS = $(ID_RED) $(SERVER_PORT) $(TIEMPO) $(HOST_FIRST) $(HOST_LAST)

all: $(PROJECT)

%.o: %.cpp
	$(CC) -c $< $(CFLAGS)

$(PROJECT): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS)

.PHONY: clean

clean:
	rm -f $(OBJECTS) $(PROJECT)

run:
	./$(PROJECT) $(ARGS)
